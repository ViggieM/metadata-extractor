# API Server
PORT=3000

# Browser Connection
BROWSER_WEB_URL=http://chrome.localhost:9222
FETCH_TIMEOUT_MS=30000

# DNS Resolution
DNS_RESOLVER_TIMEOUT_MS=3000

# Rate Limiting
RATE_LIMIT_REQUESTS=5
RATE_LIMIT_WINDOW_MS=60000

# Consent Cookies (optional)
# CONSENT_COOKIES_PATH=config/consent-cookies.json

# API Key Authentication (optional - leave empty to disable)
# API_KEY=your-secret-api-key

# API Documentation Authentication (optional - leave empty to disable)
# DOCS_USERNAME=admin
# DOCS_PASSWORD=your-docs-password

# Cloudflare Tunnel (get token from Zero Trust dashboard)
# CLOUDFLARE_TUNNEL_TOKEN=

# Public hostname for Traefik routing (required for production)
# API_HOST=metadata.yourdomain.com
